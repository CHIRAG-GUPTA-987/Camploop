        features: <%-JSON.stringify(campgrounds)%>
    }
    console.log(campgrounds);
</script>

<div id="cluster-map" class="mb-5"></div>
    <h1 class="mb-3">CampGrounds</h1>
    <ul>
        <% for(campground of campgrounds){ %> 
            <div class="card my-3">
                <div class="row">
                    <div class="col-md-4">
                        <a href="/campground/<%= campground._id %> "><img class="img-fluid" src="<%= campground.images[0].url %> " alt=""></a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %> </h5>
                            <div class="card-text"><%= campground.description %> </div>
                            <div class="card-text">
                                <small class="text-muted"><%= campground.location %> </small>
                            </div>
                            <a class="btn btn-primary" href="/campground/<%= campground._id %> ">View <%= campground.title %> </a>
                        </div>  
                    </div>
                </div>
            </div>
        <% } %> 
    </ul>
    <a class="btn btn-secondary text-light mt-3 d-inline-block" href="/campground/new" style="text-decoration: none; color: black;">Create new CampGround</a>

    <script src="/javascripts/clusterMap.js"></script>