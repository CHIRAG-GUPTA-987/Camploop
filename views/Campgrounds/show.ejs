<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/starRatings.css" />
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN %>';
  const mapCenter = <%- JSON.stringify(campground)%>.geometry.coordinates
  const mapLocation = <%- JSON.stringify(campground)%>.location
  const campName = <%- JSON.stringify(campground)%>.title
</script>
<div class="row">
  <div class="col-md-6 mb-2">
    <div class="card">
      <div id="campgroundcarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% campground.images.forEach((image, i) =>{ %>
          <div class="carousel-item <%= i===0? 'active': '' %>">
            <img src="<%= image.url %> " class="d-block w-100" alt="" />
          </div>
          <% }) %>
        </div>
        <% if(campground.images.length>1){ %>
        <button
          class="carousel-control-prev"
          type="button"
          data-target="#campgroundcarousel"
          data-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-target="#campgroundcarousel"
          data-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </button>
        <% } %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campground.location %></li>
        <li class="list-group-item text-dark">
          Submitted by
          <span class="font-weight-bold"
            ><%= campground.author.username %></span
          >
        </li>
        <li class="list-group-item">$<%= campground.price %>/night</li>
      </ul>
      <% if(currentUser && campground.author.equals(currentUser._id)){ %>
      <div class="card-body list-inline">
        <a href="/campground/<%= campground._id %>/edit" class="btn btn-warning"
          >Update Campground</a
        >
        <form
          class="d-inline"
          method="POST"
          action="/campground/<%= campground._id%>/delete?_method=DELETE"
        >
          <button class="btn btn-danger" type="Submit">
            Delete Campground
          </button>
        </form>
      </div>
      <% } %>
      <div class="card-footer">2 days to go</div>
    </div>
  </div>
  <div class="col-md-6 mb-2">
    <div id="map"></div>
    <% if(currentUser && (!(currentUser._id.equals(campground.author._id)) &&
    !(currentUser._id.equals(user_id)))){ %>
    <div class="m-3">
      <h2>Leave a Review</h2>
      <form
        class="validated-form"
        action="/campground/<%= campground._id %>/review "
        method="POST"
        novalidate
      >
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
        <div>
          <label class="form-label" for="body">Review</label>
          <textarea
            class="form-control"
            name="review[body]"
            id="body"
            cols="30"
            rows="3"
            required
          ></textarea>
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Must add some text</div>
        </div>
        <button class="btn btn-success mt-2">Submit</button>
      </form>
    </div>
    <% } %>
    <div>
      <% if(campground.reviews.length){ %> <% for(review of campground.reviews){
      %>
      <div class="card m-3">
        <div class="card-body">
          <h5 class="card-title"><%= review.author.username %></h5>
          <p
            class="card-text starability-result"
            data-rating="<%= review.rating %>"
          >
            Rated: <%= review.rating %> stars
          </p>
          <p class="card-text">Review: <%= review.body %></p>
          <% if(currentUser && (review.author.equals(currentUser._id) ||
          campground.author.equals(currentUser._id))){ %>
          <form
            action="/campground/<%=campground._id %>/review/<%=review._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger btn-sm">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %> <% } %>
    </div>
  </div>
</div>

<script src="/javascripts/showmap.js"></script>
