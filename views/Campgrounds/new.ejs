<% layout('layouts/boilerplate') %> 
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card shadow rounded-lg">
                <div class="card-body">
            <h2 class="card-title text-center">CREATE NEW CAMPGROUND</h2>
            <form method="POST" action="/campground/new" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label"for="title">ENTER CAMPGROUND NAME: </label>
                    <input class="form-control" type="text" name="CampGround[title]" id="title" placeholder="CAMPGROUND" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Enter Name of CampGround
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">CAMPGROUND PRICE: </label>
                    <div class="input-group"></div>
                      <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                      <input type="number" class="form-control" value="10" id="price" name="CampGround[price]" required>
                      <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Enter valid Price
                    </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">DESCRIBE ABOUT THIS CAMPGROUND: </label>
                    <textarea class="form-control" name="CampGround[description]" id="description" rows="5" required></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Must describe about CampGround
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">LOCATION: </label>
                    <input class="form-control" type="text" name="CampGround[location]" id="location" required >
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Enter valid Location
                    </div>
                </div>
                <div class="mb-3">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="images">Upload</span>
                        </div>
                        <div class="custom-file">
                          <input type="file" class="custom-file-input" id="image" name="image" aria-describedby="images" multiple required>
                          <label class="custom-file-label" for="image">Choose image(s)...</label>
                        </div>
                      </div>
                </div>
                <button class="btn-success btn btn-block" type="submit">CREATE CAMPGROUND</button>
            </form>
            <a class="btn btn-light btn-block mt-3"href="/campground" style="text-decoration: none; color: black;">Cancel</a>
        </div>
    </div>
</div>
</div>